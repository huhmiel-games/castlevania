<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.huhmielgames.castlevania" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Castlevania</name>
    <description>Castlevania fangame remake</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <preference name="hardwareAccelerated" value="true" />
    <preference name="isGame" value="true" />
</widget>
